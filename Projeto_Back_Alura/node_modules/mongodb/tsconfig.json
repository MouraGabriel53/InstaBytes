{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2021",
    "module": "commonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es2021", "ES2022.Error", "ES2022.Object"],
    "noEmitOnError": true,
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],  // Inclui arquivos TS e JS na pasta src
  "exclude": ["node_modules", "dist"]        // Exclui pastas desnecess√°rias
}
